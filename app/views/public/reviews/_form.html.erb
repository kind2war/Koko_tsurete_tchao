<% if member_signed_in? %>
  <%= form_with( model:[park, review],method: :post ) do |f| %>
    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title,  class: 'form-control title' %>
    </div>
    <div class ="form-group">
      <%= f.label :review_detail, "本文"%>
      <%= f.text_area :review_detail, rows: '5', placeholder: "レビューをここに",  class: 'form-control review_detail' %>
    </div>
    <%= f.submit class:"btn btn-primary" %>
  <%end%>
<%else%>
  ログイン後にレビュー投稿ができます。
<%end%>
