<%= link_to "前のページへ戻る", :back %>
<div class="container px-4">
<% flash.each do |message_type, message| %>
  <%= content_tag :div, message, class: "alert alert-danger" %>
<% end %>
<h3>編集</h3>
<%= render "public/shared/error_messages", resource: resource %>
  <div class="row justify-content-center">
    <div class="col-sm-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.label :email,"メールアドレス", class:"col-form-label" %>
    </div>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-2">
      <%= f.label :password,"新しいパスワード" ,class:"col-form-label"%><i></i><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上) <br />
          (変更したくない場合は空白のままにしてください)</em>
        <% end %><br />
    </div>
    <div class="col-sm-4">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-2">
      <%= f.label :password_confirmation,"もう一度入力",class:"col-form-label" %>
    </div>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-2">
      <%= f.label :current_password,"現在のパスワード(必須)" %> <i></i><br />
    </div>
    <div class="col-sm-4">
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
    </div>
  </div>
  <div class="sex_field row justify-content-center">
    <div class="col-sm-2">
      <%= f.label :sex,"性別", class:"form-check-label" %>
    </div>
    <div class="col-sm-4">
      <%= f.label :male,"男性", class:"form-check-label"  %>
        <%= f.radio_button :sex, :man,   class:"form-check-input", disabled: true %>
      <%= f.label :female,"女性", class:"form-check-label" %>
        <%= f.radio_button :sex, :woman, class:"form-check-input", disabled: true %>
    </div>
  </div>

  <div class="date_select row justify-content-center">
    <div class="col-sm-2">
      <%= f.label :生年月日,class:"col-form-label" %>
    </div>
    <div class="col-sm-4">
      <%= f.date_select :birth_date, use_month_numbers: true,
      start_year: 1930,
      end_year: (Time.now.year - 16),
      default: Date.new(1991, 1, 1) ,disabled: true%>
    </div>
  </div>

  <div class="account_name row justify-content-center">
    <div class="col-sm-2">
      <%= f.label :アカウント名,class:"col-form-label" %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :account_name , class:"form-control"%>
        <BR>
    </div>
    <div class="row justify-content-end">
      <div class="col-sm-4 p-2 mb-2">
      <%= f.submit "更新する",class:"btn-sm btn-primary" %>
    <% end %>
      <%= button_to "退会", registration_path(resource_name), data: { confirm: "本当に退会しますか?", turbo_confirm: "本当に退会しますか?" }, method: :delete ,class:"btn-sm btn-danger"%>
      </div>
    </div>

  </div>
</div>