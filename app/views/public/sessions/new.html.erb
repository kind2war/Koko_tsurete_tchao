<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="field">
    <div class="col-md-2">
      <%= f.label :メールアドレス, class:"col-form-label"%>
    </div>
    <div class="col-md-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="field">
    <div class="col-md-2">
      <%= f.label :パスワード, class:"col-form-label" %>
    </div>
    <div class="col-md-5">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="row offset-2">
    <div class="field">
      <div class="col-md-1">
        <%= f.check_box :remember_me %>
      </div>
      <div class="col-md-2">
        <%= f.label :remember_me %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="actions row offset-2">
    <div class="col-md-2">
      <%= f.submit "Log in" %>
    </div>
  </div>
  <div class="row offset-2">
    <div class="col-md-2">
      <%= render "public/shared/links" %>
    </div>
  </div>
<% end %>
</div>


