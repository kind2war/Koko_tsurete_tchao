<h1>parks#show</h1>
<% if @review_comment.errors.any? %>
  <div class = "alert">
    <ul>
      <% @review_comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<table>
  <thead>
    <tr>
      <th>NO.</th>
      <th>名称</th>
      <th>所在地</th>
      <th>種別</th>
      <th>緯度</th>
      <th>経度</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @park.id %></td>
      <td><%= @park.park_name %></td>
      <td><%= @park.address %></td>
      <td><%= @park.park_type %></td>
      <td><%= @park.latitude %></td>
      <td><%= @park.longitude %></td>
    </tr>
  </tbody>
</table>

<!--投稿されたレビューを表示させる-->
<% @reviews.each do |review| %>
  <div class="review_title">
    <b>title:</b>
    <%= review.title %><br />
  </div>
  <div class="review_detail">
    <b>review_detail:</b>
    <%= review.review_detail %><br />
  </div>
  <% if @member == current_member %>
    <%= link_to 'Destroy', review, method: :delete, data: { confirm: '削除してもよろしいでしょうか？' } %>
  <% end %>
<%end%>

<!--「まだレビューは投稿されていません」-->
<!--レビュー投稿フォーム-->
<%= render "public/reviews/form.html.erb", {park: @park, review: @review } %>





