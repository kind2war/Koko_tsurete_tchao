<h1>parks#show</h1>
<% if @review.errors.any? %>
  <div class = "alert">
    <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<table>
  <thead>
    <tr>
      <th>NO.</th>
      <th>名称</th>
      <th>所在地</th>
      <th>種別</th>
      <th>緯度</th>
      <th>経度</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @park.id %></td>
      <td><%= @park.park_name %></td>
      <td><%= @park.address %></td>
      <td><%= @park.park_type %></td>
      <td><%= @park.latitude %></td>
      <td><%= @park.longitude %></td>
    </tr>
  </tbody>
</table>

<!--投稿されたレビューを表示させる-->
<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Review Detail</th>
      <th>Auther</th>
      <th></th>
    </tr>
  </thead>
    <% @reviews.each do |review| %>
  <tbody>
    <tr>
      <td><%= review.title %></td>
      <td><%= review.review_detail %></td>
      <td><%= review.member.account_name %></td>
      <% if @member == current_member %>
      <td><%= link_to 'Destroy', park_review_path(review), method: :delete, data: { confirm: '削除してもよろしいでしょうか？' } %></td>
      <% end %>
    </tr>
  </tbody>
  <%end%>
</table>

<!--「まだレビューは投稿されていません」-->
<!--レビュー投稿フォーム-->
<%= render "public/reviews/form.html.erb", {park: @park, review: @review } %>





